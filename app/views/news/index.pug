#news-row
	.container
		h3 Latest News
		.col.s12.m12.l3.push-l8.offset-l1
			#calendar
				.clndr-controls
					.clndr-previous-button ‹
					.month
					.clndr-next-buttons ›
				.clndr-grid
					.days-of-the-week
				.divider
				.preloader-wrapper.small.active
					.spinner-layer.spinner-green-only
						.circle-clipper.left
							.circle
						.gap-patch
							.circle
						.circle-clipper.right
							.circle
		.col.s12.m12.l8.pull-l4
			#news-index
				<% @news.each do |news_item| %>
					.news-post
						.date <%= news_item.published_at.to_date.to_formatted_s(:long_ordinal) %>
						<%= link_to news_item do %>
						.title <%= news_item.title %>
						<% end %>
						.image
							<img class="responsive-img" src=<%= @images.sample %>>
						.content <%= news_item.subtitle %>
						.footer
							span.comments
								p 0 comments
							span.social
								a(href='#/').waves-effect.waves-custom
									i.fa.fa-facebook(aria-hidden='true')
								a(href='#/').waves-effect.waves-custom
									i.fa.fa-twitter(aria-hidden='true')
								a(href='#/').waves-effect.waves-custom
									i.fa.fa-tumblr(aria-hidden='true')
				<% end %>
			<%= will_paginate @news %>

script.
	initialize_calendar();
