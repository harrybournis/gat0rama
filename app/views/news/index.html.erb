
<div id="news-row">
  <div class="container">
    <h2>Latest News</h2>
    <div class="col s12 m12 l3 push-l8 offset-l1">
      <div id="calendar">
        <div class="clndr-controls">
          <div class="clndr-previous-button">‹</div>
          <div class="month"></div>
          <div class="clndr-next-buttons">›</div>
        </div>
        <div class="clndr-grid">
          <div class="days-of-the-week"></div>
        </div>
        <div class="divider"></div>
        <div class="preloader-wrapper small active">
          <div class="spinner-layer spinner-green-only">
            <div class="circle-clipper left">
              <div class="circle"></div>
            </div>
            <div class="gap-patch">
              <div class="circle"></div>
            </div>
            <div class="circle-clipper right">
              <div class="circle"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col s12 m12 l8 pull-l4">
      <div id="news-index"><% @news.each do |news_item| %>
        <div class="news-post">
          <div class="date"><%= news_item.published_at.to_date.to_formatted_s(:long_ordinal) %></div><%= link_to news_item do %>
          <div class="title"><%= news_item.title %></div><% end %>
          <div class="image"><img class="responsive-img" src=<%= @images.sample %>></div>
          <p class="content truncate"><%= news_item.body %></p><%= link_to news_item, class: 'read-more' do %> Read More <% end %>
          <div class="footer"><span class="comments">
              <p>0 comments</p></span><span class="social"><a class="waves-effect waves-custom" href="#/"><i class="fa fa-facebook" aria-hidden="true"></i></a><a class="waves-effect waves-custom" href="#/"><i class="fa fa-twitter" aria-hidden="true"></i></a><a class="waves-effect waves-custom" href="#/"><i class="fa fa-tumblr" aria-hidden="true"></i></a></span></div>
        </div><% end %>
      </div><%= will_paginate @news %>
    </div>
  </div>
</div>
<script>initialize_calendar();</script>