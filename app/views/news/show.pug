.row
	.container
		.col.l10.m12.s12.offset-l1
			article#posts-show

				h2#post-title <%= @news.title %>
				h4#post-subtitle <%= @news.subtitle %>

				.post-image-container
					<img class="responsive-img post-image materialboxed" width="650" src=<%= @images.sample %>>

				#post-content
					p <%= @news.body %>
					p <%= Faker::Hipster.paragraph %>

					.post-image-container
						<img class="responsive-img post-image materialboxed" width="650" src=<%= @images.sample %>>

					p <%= Faker::Hipster.paragraph %>

					.post-image-container
						<img class="responsive-img post-image materialboxed"  width="650" src=<%= @images.sample %>>

					p <%= Faker::Hipster.paragraph(2) %>

					.post-image-container
						<img class="responsive-img post-image materialboxed" width="650" src=<%= @images.sample %>>

.divider.end-of-post

.container

	<%= render 'blog_posts/related_posts', post: @news %>

	.row
		#disqus_thread
		script.
			$(document).on('turbolinks:load', function () {
				$('.materialboxed').materialbox();

				var disqus_config = function () {
				this.page.url = "<%= request.original_url %>";
				this.page.identifier = "<%= @news.id %>";
				};

				(function() { // DON'T EDIT BELOW THIS LINE
				var d = document, s = d.createElement('script');
				s.src = '//gat0rama.disqus.com/embed.js';
				s.setAttribute('data-timestamp', +new Date());
				(d.head || d.body).appendChild(s);
				})();
			});
		noscript
			| Please enable JavaScript to view the
			a(href='https://disqus.com/?ref_noscript') comments powered by Disqus.
