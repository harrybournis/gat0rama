doctype html
html
  head
    title Gat0rama
    <%= csrf_meta_tags %>
    <meta name="theme-color" content="#000000" />

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'main_site.js', 'data-turbolinks-track': 'reload' %>

    //custom
    <%= cache @settings do %>
    style.
      body {
        background-color: <%= @settings.value["website_background_color"] %>;
        background-image: <%= @settings.value["website_background_image"] %>;
      }
      nav ul a, #burger_menu_icon {
        color: <%= @settings.value["navbar_links_color"] %>;
      }
    <% end %>

  body
    header
      //- Mobile Navbar
      nav#nav-logo
        .row
          .col.s2.m2.l0.hide-on-large-only#burger-menu-icon-column
            a#burger_menu_icon.button-collapse(href='#', data-activates='mobile-demo')
              i.fa.fa-bars.fa-2x
          .col.s10.m10.l12#logo-column
            a(href='/')
              <%= cache ['header', @settings] do %>
              <img class="responsive-img" src=<%= @settings.value["header_logo"] %>>
              <% end %>
        ul#mobile-demo.side-nav
          li
            a(href='/news').waves-effect.waves-custom  NEWS
          li
            a(href='/blog_posts').waves-effect.waves-custom  FEATURES
          li
            a(href='/about').waves-effect.waves-custom  ABOUT
          li
            a(href='/').waves-effect.waves-custom  SHOP
          li
            a(href='/contribute').waves-effect.waves-custom  CONTRIBUTE

      //- Desktop Navbar
      nav#nav-main.hide-on-med-and-down
        .nav-wrapper
          ul.center.hide-on-med-and-down.ul-flex
            li.navbar-link#news
              a(href='/news').waves-effect.waves-custom NEWS
            li.navbar-link#blog_posts
              a(href='/blog_posts').waves-effect.waves-custom  FEATURES
            li.navbar-link#about
              a(href='/about').waves-effect.waves-custom  ABOUT
            li.navbar-link#shop
              a(href='/').waves-effect.waves-custom  SHOP
            li.navbar-link#contribute
              a(href='/contribute').waves-effect.waves-custom  CONTRIBUTE

            li.social-button
              a(href='#/').waves-effect.waves-custom
                i.fa.fa-twitter.fa-2x(aria-hidden='true')

            li.social-button
              a(href='#/').waves-effect.waves-custom
                i.fa.fa-facebook.fa-2x(aria-hidden='true')

            li.social-button
              a(href='#/').waves-effect.waves-custom
                i.fa.fa-instagram.fa-2x(aria-hidden='true')

            li.social-button
              a(href='#/').waves-effect.waves-custom
                i.fa.fa-tumblr.fa-2x(aria-hidden='true')


    main#main_content
        <%= yield %>


    footer.page-footer
      .container
        .row
          .col.l6.s12
            h5.white-text Footer Content
            p.grey-text.text-lighten-4 You can use rows and columns here to organize your footer content.
          .col.l4.offset-l2.s12
            h5.white-text Links
            ul
              li
                a.grey-text.text-lighten-3(href='#!') Link 1
              li
                a.grey-text.text-lighten-3(href='#!') Link 2
              li
                a.grey-text.text-lighten-3(href='#!') Link 3
              li
                a.grey-text.text-lighten-3(href='#!') Link 4
      #footer-copyright.footer-copyright
        .container
          | Â© 2014 Copyright Korkolis
          <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
