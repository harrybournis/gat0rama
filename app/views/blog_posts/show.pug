.row
	.container
		.col.l10.m12.s12.offset-l1
			article#posts-show

				h3#post-title <%= @post.title %>
				h5#post-subtitle <%= @post.subtitle %>

				.post-image-container
					<img class="responsive-img post-image materialboxed" src=<%= @images.sample %>>
				#post-content
					p <%= @post.body %>
					p <%= Faker::Hipster.paragraph %>

					.post-image-container
						<img class="responsive-img post-image materialboxed" src=<%= @images.sample %>>

					p <%= Faker::Hipster.paragraph %>

					.post-image-container
						<img class="responsive-img post-image materialboxed" src=<%= @images.sample %>>

					p <%= Faker::Hipster.paragraph(2) %>

					.post-image-container
						<img class="responsive-img post-image materialboxed" src=<%= @images.sample %>>

.divider.end-of-post

.container

	<%= render 'related_posts', post: @post %>

	.row
		#disqus_thread
		script.
			$(document).on('turbolinks:load', function () {
				$('.materialboxed').materialbox();

				var disqus_config = function () {
				this.page.url = "<%= request.original_url %>";
				this.page.identifier = "<%= @post.id %>";
				};

				(function() { // DON'T EDIT BELOW THIS LINE
				var d = document, s = d.createElement('script');
				s.src = '//gat0rama.disqus.com/embed.js';
				s.setAttribute('data-timestamp', +new Date());
				(d.head || d.body).appendChild(s);
				})();
			});
		noscript
			| Please enable JavaScript to view the
			a(href='https://disqus.com/?ref_noscript') comments powered by Disqus.

