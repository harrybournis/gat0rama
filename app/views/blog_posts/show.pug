.row
	.container
		.col.l10.m10.s12.offset-m1.offset-l1
			article#posts-show

				#post-title <%= @post.title %>
				#post-subtitle <%= @post.subtitle %>

				.post-image-container
					<img class="responsive-img post-image" src=<%= @images.sample %>>

				#post-content <%= @post.body %>
					p <%= Faker::Hipster.paragraph %>

					.post-image-container
						<img class="responsive-img post-image" src=<%= @images.sample %>>

					p <%= Faker::Hipster.paragraph %>

					.post-image-container
						<img class="responsive-img post-image" src=<%= @images.sample %>>

					p <%= Faker::Hipster.paragraph(2) %>

					.post-image-container
						<img class="responsive-img post-image" src=<%= @images.sample %>>

.divider.end-of-post
.container
	.row#related-posts-section
		section
			h3.center-align Related Posts
			//.container
			<% @post.related_posts.each do |related| %>
			.col.s12.m4.l4
				<%= link_to related do %>

				.related-post
					.post-thumbnail
						<img class="responsive-img post-image" src=<%= @images.sample %>>
					.post-date <%= related.published_at.to_date.to_formatted_s(:long_ordinal)  %>
					.post-title <%= related.title %>
				<% end %>
					.post-subtitle <%= related.subtitle %>

			<% end %>
