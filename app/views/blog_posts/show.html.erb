
<div class="row">
  <div class="container">
    <div class="col l10 m12 s12 offset-l1">
      <article id="posts-show">
        <h2 id="post-title"><%= @post.title %></h2>
        <h4 id="post-subtitle"><%= @post.subtitle %></h4>
        <div class="post-image-container"><img class="responsive-img post-image" src=<%= @images.sample %>></div>
        <div id="post-content">
          <p><%= @post.body %></p>
          <p><%= Faker::Hipster.paragraph %></p>
          <div class="post-image-container"><img class="responsive-img post-image" src=<%= @images.sample %>></div>
          <p><%= Faker::Hipster.paragraph %></p>
          <div class="post-image-container"><img class="responsive-img post-image" src=<%= @images.sample %>></div>
          <p><%= Faker::Hipster.paragraph(2) %></p>
          <div class="post-image-container"><img class="responsive-img post-image" src=<%= @images.sample %>></div>
        </div>
      </article>
    </div>
  </div>
</div>
<div class="divider end-of-post"></div>
<div class="container">
  <div class="row" id="related-posts-section">
    <section>
      <h2 class="center-align">Related Posts</h2><% @post.related_posts.each do |related| %>
      <div class="col s12 m12 l4 related-post"><%= link_to related do %>
        <div class="related-post">
          <div class="post-thumbnail"><img class="responsive-img post-image" src=<%= @images.sample %>></div>
          <div class="post-date"><%= related.published_at.to_date.to_formatted_s(:long_ordinal)  %></div>
          <div class="post-title"><%= related.title %></div>
        </div><% end %>
        <div class="post-subtitle"><%= related.subtitle %></div>
      </div><% end %>
    </section>
  </div>
  <div class="row">
    <div id="disqus_thread"></div>
    <script>
      $(document).on('turbolinks:load', function () {
      	var disqus_config = function () {
      	this.page.url = "<%= request.original_url %>";
      	this.page.identifier = "<%= @post.id %>";
      	};
      
      	(function() { // DON'T EDIT BELOW THIS LINE
      	var d = document, s = d.createElement('script');
      	s.src = '//gat0rama.disqus.com/embed.js';
      	s.setAttribute('data-timestamp', +new Date());
      	(d.head || d.body).appendChild(s);
      	})();
      });
    </script>
    <noscript>Please enable JavaScript to view the<a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
  </div>
</div>