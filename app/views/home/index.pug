.slider#slider
	ul.slides
		<% @slider_posts.each_with_index do |slider_post, index| %>
		li
			<img src=<%= @slider_images[index] %>>
			.caption.center-align
				h3.caption-title 	<%= slider_post.title %>
				h5.caption-subtitle <%= slider_post.subtitle %>
		<% end %>




<% if @posts.length - 6 > 0 %>

<% @posts.each_slice(6).with_index do |posts_chunk, index| %>

.container
	.row
		<% posts_chunk.each do |post| %>
		.col.s12.m4.l4
			.card
				.card-image
					<img src=<%= @images.sample %>>
					span.card-tag fashion
					span.card-title <%= post.title %>
					span.card-content
						p <%= post.subtitle %>

		<% end %>


<% if posts_chunk.length == 6 %>
.row
	.parallax-container
		.parallax
			<img src=<%= @paralax_images.sample.url %>>
<% end %>


<% end %>

<% else %>

.container
	.row
		<% @posts.each do |post| %>
		.col.s12.m4.l4
			.card
				.card-image
					<img src=<%= @images.sample %>>
					span.card-tag fashion
					span.card-title <%= post.title %>
					span.card-content
						p <%= post.subtitle %>

		<% end %>

<% end %>

